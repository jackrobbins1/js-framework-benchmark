{
  "include": ["src/*"],
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "types": [],
    "target": "ES2022",
    "module": "Node16",
    "verbatimModuleSyntax": true,
    "composite": true,
    "moduleResolution": "node16",
    // TODO: Enable once rollup builds are setup, and rename imports to .ts (for Deno compatibility)
    // In package.json exports use only *.ts mapped to lib/*.js or src/*.ts
    // "allowImportingTsExtensions": true,
    // "customConditions": ["deno"]
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "metron-jsx/web-dom",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "useDefineForClassFields": true,
    "useUnknownInCatchVariables": true,
    "forceConsistentCasingInFileNames": true
  }
}
